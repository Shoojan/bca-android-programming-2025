<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HerActivity">

    <TextView
        android:id="@+id/herTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/giftResponseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Respond to gift..."
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/herTitle"
        app:layout_constraintBottom_toTopOf="@+id/sendGiftResponseButton"/>

    <Button
        android:id="@+id/sendGiftResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Response"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giftResponseEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>